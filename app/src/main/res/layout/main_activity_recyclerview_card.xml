<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_recyclerview_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#C6C6C6"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_activity_recyclerview_card_view_cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/main_activity_recyclerview_imageButton_remove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@+id/main_activity_recyclerview_card_view_cons"
            app:layout_constraintEnd_toEndOf="@+id/main_activity_recyclerview_card_view_cons"
            app:layout_constraintTop_toTopOf="@+id/main_activity_recyclerview_card_view_cons"
            app:srcCompat="@drawable/ic_baseline_remove_circle_24" />

        <TextView
            android:id="@+id/main_activity_recyclerview_textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/main_activity_recyclerview_card_view_cons"
            app:layout_constraintEnd_toStartOf="@id/main_activity_recyclerview_imageButton_remove"
            app:layout_constraintStart_toStartOf="@+id/main_activity_recyclerview_card_view_cons"
            app:layout_constraintTop_toTopOf="@+id/main_activity_recyclerview_card_view_cons"
            tools:text="Sample ingredient" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>