<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recipe_details_xml_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEBEB"
    tools:context=".ui.recipeDetailsActivity.RecipeDetailsActivity">

    <!-- Background -->

    <ImageView
        android:id="@+id/activity_recipe_details_xml_recipe_image"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:background="#AAAAAA"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_37684_636x393" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_bookmark_24" />

    <!-- Scroll section -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="205dp"
            app:cardBackgroundColor="#ECEBEB"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <!-- Title section -->

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cheesy Rosemary Meatball Bake some more text"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Time / servings section -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/activity_recipe_details_xml_time_servings_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2">

                    <ImageView
                        android:id="@+id/activity_recipe_details_xml_clock_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:layout_constraintStart_toStartOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:layout_constraintTop_toTopOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:srcCompat="@drawable/ic_baseline_access_time_24" />

                    <TextView
                        android:id="@+id/activity_recipe_details_xml_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="45 min."
                        app:layout_constraintBottom_toBottomOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:layout_constraintStart_toEndOf="@+id/activity_recipe_details_xml_clock_image"
                        app:layout_constraintTop_toTopOf="@+id/activity_recipe_details_xml_time_servings_section" />

                    <ImageView
                        android:id="@+id/activity_recipe_details_xml_servings_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:paddingStart="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:layout_constraintStart_toEndOf="@+id/activity_recipe_details_xml_time_text"
                        app:layout_constraintTop_toTopOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:srcCompat="@drawable/ic_baseline_people_24" />

                    <TextView
                        android:id="@+id/activity_recipe_details_xml_servings_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="2 servings"
                        app:layout_constraintBottom_toBottomOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:layout_constraintStart_toEndOf="@+id/activity_recipe_details_xml_servings_image"
                        app:layout_constraintTop_toTopOf="@+id/activity_recipe_details_xml_time_servings_section" />

                    <ImageButton
                        android:id="@+id/activity_recipe_details_xml_servings_image_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:layout_constraintStart_toEndOf="@+id/activity_recipe_details_xml_servings_text"
                        app:layout_constraintTop_toTopOf="@+id/activity_recipe_details_xml_time_servings_section"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Ingredients section -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/activity_recipe_details_xml_servings_ingredients_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/activity_recipe_details_xml_time_servings_section">

                    <TextView
                        android:id="@+id/activity_recipe_details_xml_servings_ingredients_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredients:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activity_recipe_details_xml_switch_text_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imperial"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Switch
                        android:id="@+id/measures_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/activity_recipe_details_xml_switch_text_right"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activity_recipe_details_xml_switch_text_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metric"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/measures_switch"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/activity_recipe_details_xml_ingredients_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/activity_recipe_details_xml_servings_ingredients_title_layout">

                    <TextView
                        android:id="@+id/ingredients_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="5sp"
                        android:text="* ¼ tsp black pepper\n* ¼ tsp black pepper\n* ¼ tsp black pepper\n* ¼ tsp black pepper"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Summary section -->

                <TextView
                    android:id="@+id/summary_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Summary:"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/activity_recipe_details_xml_ingredients_layout" />

                <TextView
                    android:id="@+id/summary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heat olive oil in large oven proof skillet over medium high heat. Add the onion, mushroom and pepper and sauté till softened – about 3-4 minutes. Add the garlic and cook for an additional minute. Add the crushed tomatoes, tomato paste, red pepper, sugar, cumin, salt and pepper. Stir and reduce heat to medium low - allow to cook down while making the meat balls – will thicken. Remove from the heat and place in a bowl – add the cream."
                    app:layout_constraintTop_toBottomOf="@id/summary_title" />

                <!-- Preparation section -->

                <TextView
                    android:id="@+id/preparation_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preparation:"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/summary_text" />

                <TextView
                    android:id="@+id/preparation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. For the sauce\n\n2. Heat olive oil in large oven proof skillet over medium high heat. Add the onion, mushroom and pepper and saut till softened about 3-4 minutes. Add the garlic and cook for an additional minute. Add the crushed tomatoes, tomato paste, red pepper, sugar, cumin, salt and pepper. Stir and reduce heat to medium low - allow to cook down while making the meat balls will thicken. Remove from the heat and place in a bowl add the cream.\n\n3. For the meatballs\n\n4. In a large mixing bowl, combine the ground meat, bread crumbs, shallot, thyme, rosemary, parmesan, garlic, egg, salt and pepper. Using your hands, mix ingredients together until well combined. Form into 1 inch meatballs.\n\n5. In the skillet that the sauce was cooked in, heat olive oil over medium high heat. Cook meatballs (may need to cook in batches) turning occasionally. The meatballs may stick to the skillet a little and that is ok will deglaze in a moment. Once meatballs are browned on all sides, remove meatballs to the same bowl that the sauce is in.\n\n6. Turn the burner up to medium high. When skillet is hot, add wine (can substitute chicken or beef broth). Scrape the browned bits from the bottom of the pan and allow the wine to bubbly and reduce by about half (5 mins). Remove skillet from the heat and add the bowl of sauce and meatballs to the skillet.\n\n7. To finish:\n\n8. Preheat the oven to 400. Sprinkle the mozerella and paremesean over the top of the meatballs and sauce and bake until heated through and cheese is melted and bubbly about 15 minutes. Garnish with fresh basil. Serve warm."
                    app:layout_constraintTop_toBottomOf="@id/preparation_title" />

                <!-- Source section -->

                <TextView
                    android:id="@+id/source_sction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="For more information check the source:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/preparation_text" />

                <TextView
                    android:id="@+id/source_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foodista.com – The Cooking Encyclopedia Everyone Can Edit"
                    app:layout_constraintTop_toBottomOf="@+id/source_sction" />

                <!-- Nutrions section -->

                <TextView
                    android:id="@+id/nutrions_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Nutritional information for 1 serving:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/source_link" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nutrions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nutrions_title">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nutrions_layout_card"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:cardBackgroundColor="#AAAAAA"
                        app:cardCornerRadius="75dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/nutrions_layout_card_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/nutrions_layout_card_calories_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="643"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/nutrions_layout_card_calories_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="kcal"
                                android:textSize="20sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/nutrions_layout_card_calories_number" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/nutrions_layout_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        app:layout_constraintStart_toEndOf="@+id/nutrions_layout_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/nutrions_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total fat 36g (30%)"
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nutrions_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbs 18g (34%)"
                            android:paddingTop="10dp"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@id/nutrions_fat"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/nutrions_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proteins 23g (46%)"
                            android:paddingTop="10dp"
                            android:textSize="20sp"
                            app:layout_constraintTop_toBottomOf="@id/nutrions_carbs"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Details:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/nutrions_layout" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Protein 23g (48% of daily need)\nVitamin B3 6mg (33% od daily need)\nVitamin B12 1ug (33% of daily need)\nZinc 4 mg (29% of daily need)\nProtein 23g (48% of daily need)\nVitamin B3 6mg (33% od daily need)\nVitamin B12 1ug (33% of daily need)\nZinc 4 mg (29% of daily need)\nProtein 23g (48% of daily need)\nVitamin B3 6mg (33% od daily need)\nVitamin B12 1ug (33% of daily need)\nZinc 4 mg (29% of daily need)\nProtein 23g (48% of daily need)\nVitamin B3 6mg (33% od daily need)\nVitamin B12 1ug (33% of daily need)\nZinc 4 mg (29% of daily need)"
                    app:layout_constraintTop_toBottomOf="@+id/details_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>